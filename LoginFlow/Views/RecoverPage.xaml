<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginFlow.Views.RecoverPage"
             Title="Recuperación de Contraseña">

    <StackLayout Padding="20">

        <Label Text="Introduce tu correo electrónico para recuperar tu contraseña"
               FontSize="Medium" HorizontalOptions="Center" />

        <Entry x:Name="EmailEntry" Placeholder="Correo Electrónico" Keyboard="Email" />

        <Button Text="Recuperar Contraseña" Clicked="OnRecoveryClicked" />

    </StackLayout>

</ContentPage>
