<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginFlow.Views.RegisterPage"
             Title="Registrarse">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">
            <Label Text="Registro de Usuario" FontSize="24" HorizontalOptions="Center"/>

            <Entry x:Name="NombreEntry" Placeholder="Usuario"/>
            <Entry x:Name="CorreoEntry" Placeholder="Correo electrónico" Keyboard="Email"/>
            <Entry x:Name="PasswordEntry" Placeholder="Contraseña" IsPassword="True"/>

            <Button Text="Registrarse" Clicked="OnRegisterClicked"/>

            <Label x:Name="ResultadoLabel" TextColor="Green" IsVisible="False"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
